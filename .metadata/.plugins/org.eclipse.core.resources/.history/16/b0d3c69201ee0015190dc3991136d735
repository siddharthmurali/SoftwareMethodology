package Controller;

import board.*;

/**
 * @author Siddharth Murali
 * @author Karthik Nair
 *
 */

public class Controller {
	
	private board.ChessBoard board;
	
	public boolean endGame;
	
	public Controller(){
		this.board = new ChessBoard();
	}
	
	public void resignGame(){
		endGame = true;
	}
	
	public void doMove(char fileOne, char rankOne, char fileTwo, char rankTwo, String toPromote){
		if (!blackTurn()){
			board.isBlackTurn = true;
		}
		else{
			board.isBlackTurn = false;
		}
		
	}
	public String getBoardString(){
		return this.board.toString();
	}
	
	public boolean blackTurn(){
		return board.getBlackTurn();
		
	}

}
